{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
    "target": "es5",
    "module": "commonjs",
		"lib": ["es6", "dom"],
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"experimentalDecorators": true,
		"strictNullChecks": true
	},
	"include": ["lib/**/*"]
}
