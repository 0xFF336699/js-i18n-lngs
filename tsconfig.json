{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "esnext",
		"target": "esnext",
		"lib": ["es6", "dom"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"experimentalDecorators": true,
		"strictNullChecks": true
	},
	"include": ["lib/**/*"]
}
